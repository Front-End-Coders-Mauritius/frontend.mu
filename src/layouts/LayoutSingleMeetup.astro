---
import BaseHead from "../components/BaseHead.astro";
import Header from "../components/MegaMenu.astro";
import Footer from "../components/Footer.astro";
import OgImage from "../components/OgImage.astro";
import Backdrop from "./Backdrop.astro";

const title = "hi";
const description = "hi";

const props = Astro.props;
---

<html lang="en">
  <head>
    <BaseHead title={props.title} description={props.description} />
    <OgImage pageType="event" title={props.title} />
    <slot name="head" />
  </head>

  <body>
    <Backdrop>
      <Header />

      <slot />

      <Footer />
    </Backdrop>
  </body>
</html>
