---
const props = Astro.props;
---

<div class="lg:mx-auto lg:w-[80%] px-4">
  <div
    v-if="props.getCurrentEvent.album"
    class="flex flex-col items-center gap-8 py-20"
  >
    <div
      class="w-full grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 lg:grid-cols-4 gap-4"
    >
      {
        props.currentAlbum &&
          props.currentAlbum.length > 0 &&
          props.currentAlbum.map((photo) => (
            <div class="aspect-video">
              <img
                src={`${props.source}/${photo}`}
                class="object-cover w-full h-full object-center block rounded-md overflow-hidden "
                loading="lazy"
              />
            </div>
          ))
      }
    </div>
