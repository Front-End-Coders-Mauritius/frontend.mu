---
import LogoFec from "../components/LogoFec.astro";
import ToggleTheme from "../components/toggle-theme.vue";
import LoggedUser from "./LoggedUser.vue";
import MainMenu from "./MegaMenu.astro";
---

<div class="flex justify-between contain sticky top-0 z-30 h-32 items-center">
  <MainMenu>
    <ToggleTheme slot="dark-mode-toggle" client:load />
    <LoggedUser slot="dark-mode-toggle" client:load />
  </MainMenu>
</div>

<script>
  const logo = document.getElementById("logo");
  if (logo) {
    logo.addEventListener("contextmenu", (e) => {
      e.preventDefault();
      window.location.href = "/branding";
    });
  }
</script>
